<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyCardViewStyle" parent="Theme.MaterialComponents.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">12dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="cardBackgroundColor">@android:color/background_light</item>
    </style>


</resources>
